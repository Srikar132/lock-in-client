// Firebase Firestore Security Rules for Parental Control
// Add these rules to your firestore.rules file

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Parental Controls Collection
    // Users can only read and write their own parental control settings
    match /parental_controls/{userId} {
      // Allow read if user is authenticated and accessing their own document
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow write (create/update) if user is authenticated and accessing their own document
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Additional validation for writes
      allow update: if request.auth != null 
                    && request.auth.uid == userId
                    && request.resource.data.keys().hasAll(['isEnabled', 'updatedAt'])
                    && request.resource.data.passwordHash is string;
      
      // Allow delete only by the owner
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Add your other collection rules below
    // ...
  }
}
